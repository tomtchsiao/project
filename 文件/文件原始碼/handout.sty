\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{frametitle}{
  \vspace*{0ex}
  \begin{center}
  \vbox{\strut\fontspec{Times New Roman}\insertframetitle\strut}
  \end{center}
  \vspace*{-3ex}
}
\setbeamerfont{block title}{family=\fontspec{Times New Roman}}
\setbeamerfont{frametitle}{family=\fontspec{Times New Roman}}
\setbeamercolor{frametitle}{fg=black, bg=white}
\setbeamercolor{title}{fg=black, bg=white}
\setbeamercolor{author}{fg=black, bg=white}
\setbeamercolor{date}{fg=black, bg=white}
\setbeamercolor{section in head/foot}{bg=white, fg=black}
