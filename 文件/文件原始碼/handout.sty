\setbeamercolor{page in head/foot}{bg=white, fg=black}
\setbeamertemplate{footline}{
  \leavevmode%
\hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.5ex,right]{page in head/foot}%
      \usebeamerfont{framenumber}\fontspec{Times New Roman}\textcolor[RGB]{75,75,75}{\insertframenumber{}\hspace*{0.15em} / \hspace*{0.15em}\inserttotalframenumber} \hspace*{0.3em}
    \end{beamercolorbox}}%
  \vskip1pt%
}
\setbeamertemplate{headline}{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.5ex,left]{section in head/foot}%
      \hspace*{1em}\insertsection
    \end{beamercolorbox}}%
  \vskip1pt%
}
\setbeamercolor{block body}{bg=lightyellow}
